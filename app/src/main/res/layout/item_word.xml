<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_word.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/word_to_learn_text_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/translation_text_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/delete_word_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_icon"
        android:layout_alignParentEnd="true"/>

    <ImageButton
        android:id="@+id/editWordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_icon"
        android:layout_toLeftOf="@id/delete_word_button"
        android:background="?android:attr/selectableItemBackground" />

    <ImageButton
        android:id="@+id/buttonSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_switch_arrows"
        android:padding="8dp" />

</LinearLayout>
